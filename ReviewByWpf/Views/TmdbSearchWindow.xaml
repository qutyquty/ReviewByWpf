<Window x:Class="ReviewByWpf.Views.TmdbSearchWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReviewByWpf.Views"
        mc:Ignorable="d"
        Title="TMDB 검색" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox x:Name="SearchTextBox" KeyDown="SearchTextBox_KeyDown" Width="300" Margin="5" />
            <Button x:Name="SearchButton" Content="검색" Width="100" Margin="5" Click="SearchButton_Click" />
        </StackPanel>

        <ScrollViewer Grid.Row="1" Margin="10">
            <WrapPanel x:Name="PosterPanel" Orientation="Horizontal" />
        </ScrollViewer>

        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="◀ Prev" Click="PrevPage_Click" Margin="5" />
            <TextBlock x:Name="PageInfoText" FontSize="14"
                       VerticalAlignment="Center" Margin="5"
                       Text="Page 1 / 1" />
            <Button Content="Next ▶" Click="NextPage_Click" Margin="5" />
        </StackPanel>

        <Button Grid.Row="3" Content="포스터 선택" Margin="5" Click="ConfirmButton_Click" />
    </Grid>
</Window>
