<Window x:Class="ReviewByWpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ReviewByWpf.Views"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="450" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        
        <!-- 검색 영역 -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox Width="200" Text="{Binding SearchKeyword, UpdateSourceTrigger=PropertyChanged}" />
            <Button Content="검색" Command="{Binding SearchCommand}" Margin="5,0,0,0" />
  
            <ComboBox Width="150" Margin="10,0,0,0"
                      ItemsSource="{Binding Categories}"
                      SelectedItem="{Binding SelectedCategory, Mode=TwoWay}"
                      DisplayMemberPath="Name"
                      SelectedValuePath="Id" />

            <Button Content="리뷰 등록" Width="100" Margin="10,0,0,0" Click="OpenInsertWindowButton_Click" />
            <Button Content="DB 백업" Width="100" Margin="10,0,0,0" Command="{Binding BackupCommand}" />
        </StackPanel>
        
        <!-- 데이터그리드 -->
        <DataGrid Grid.Row="1" ItemsSource="{Binding Reviews}" 
                  SelectedItem="{Binding SelectedReview, Mode=TwoWay}" 
                  AutoGenerateColumns="False" Margin="10"
                  SelectionMode="Single" SelectionUnit="FullRow"
                  IsReadOnly="True">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50" />
                <DataGridTextColumn Header="Title" Binding="{Binding Title}" Width="150" />
                <DataGridTextColumn Header="Created Time" Binding="{Binding CreatedTime}" Width="150" />
            </DataGrid.Columns>
        </DataGrid>
        
        <!-- 포스터+리뷰 -->
        <Border Grid.Row="2" BorderBrush="Black" BorderThickness="1" Margin="10">
            <Grid Margin="5">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <StackPanel Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" 
                            Orientation="Vertical" Margin="5">
                    <Image Source="{Binding PosterUrl}" Width="200" Height="250" Margin="5" />
                    <TextBox Text="{Binding TmdbId}" Margin="5"
                             TextAlignment="Center" VerticalAlignment="Center"
                             IsReadOnly="True" />
                    <Button Content="포스터 선택" Width="200" Margin="5" Click="PosterSelectButton_Click" />
                    <Button Content="리뷰 수정" Command="{Binding UpdateCommand}" Width="200" Margin="5" />
                    <Button Content="리뷰 삭제" Command="{Binding DeleteCommand}" Width="200" Margin="5" />
                </StackPanel>

                <Grid Grid.Column="1" Grid.Row="0">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="100" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0" Text="{Binding FirstYear, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        FontSize="14" Padding="5" Margin="0,0,3,3" />
                    <TextBox Grid.Column="1"
                        Text="{Binding Title, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                        FontSize="14" Padding="5" Margin="0,0,0,3" />
                </Grid>
    
                <TextBox Grid.Column="1" Grid.Row="1" 
                    Text="{Binding Content, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" 
                    TextWrapping="Wrap" AcceptsReturn="True"
                    FontSize="14" Padding="5" 
                    VerticalScrollBarVisibility="Auto" />
            </Grid>
        </Border>

        <TextBlock Grid.Row="3" Text="{Binding StatusMessage}"
                   Background="LightBlue" Foreground="DarkBlue"
                   FontWeight="Bold" Padding="5"/>
    </Grid>
</Window>
